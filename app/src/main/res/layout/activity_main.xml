<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel de Reservas"
            android:textColor="@color/textColor"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnReservarSala1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar Sala de Enlace 1"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnReservarSala2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:text="Reservar Sala de Enlace 2 "
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnReservarEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar Equipo"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnEditarReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Reserva"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnCancelarReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar Reserva"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnVerReservas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Mis Reservas"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar SesiÃ³n"
            android:layout_marginTop="32dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
