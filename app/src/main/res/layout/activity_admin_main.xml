<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel de Administración"
            android:textColor="@color/textColor"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnSolicitudesSala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitudes de Sala"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnSolicitudesDeEquipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitudes de Equipos"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnInventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear o Editar Inventario"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnCalendario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Calendario"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/accentColor"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:layout_marginTop="32dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
