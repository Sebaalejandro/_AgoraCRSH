<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÍTULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas Lab. Enlace 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#188F97"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- SCROLL HORIZONTAL UNIFICADO -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tablaSala1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*"
                android:background="#F5F5F5"
                android:padding="4dp" />
        </HorizontalScrollView>

        <!-- TÍTULO SALA 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas Lab. Enlace 2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#188F97"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- SCROLL HORIZONTAL SALA 2 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tablaSala2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*"
                android:background="#F5F5F5"
                android:padding="4dp" />
        </HorizontalScrollView>

        <!-- TÍTULO EQUIPOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas de Equipos Tecnológicos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#188F97"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- SCROLL HORIZONTAL EQUIPOS -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tablaEquipos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="#F5F5F5"
                android:padding="4dp" />
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>
