<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÍTULO SALA 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas Lab. Enlace 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#188F97"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- ENCABEZADO DÍAS -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#E0F2F1"
            android:padding="4dp">
            <TableRow>
                <TextView android:text="Hora" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Lunes" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Martes" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Miércoles" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Jueves" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Viernes" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tablaSala1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#F5F5F5"
            android:padding="4dp" />

        <!-- TÍTULO SALA 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas Lab. Enlace 2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#188F97"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- ENCABEZADO DÍAS -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#E0F2F1"
            android:padding="4dp">
            <TableRow>
                <TextView android:text="Hora" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Lunes" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Martes" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Miércoles" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Jueves" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
                <TextView android:text="Viernes" android:textStyle="bold" android:padding="8dp" android:gravity="center"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tablaSala2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#F5F5F5"
            android:padding="4dp" />

        <!-- TÍTULO EQUIPOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservas de Equipos Tecnológicos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#188F97"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <TableLayout
            android:id="@+id/tablaEquipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#F5F5F5"
            android:padding="4dp" />
    </LinearLayout>
</ScrollView>
